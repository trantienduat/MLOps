{
  "id": null,
  "title": "MNIST API - Prometheus Monitoring",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "tags": ["mnist", "mlops", "prometheus"],
  "panels": [
    {
      "type": "timeseries",
      "title": "API Requests by Endpoint / Status",
      "datasource": {
        "type": "prometheus",
        "uid": "__PROMETHEUS__"
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "sum(rate(api_requests_total[1m])) by (endpoint, status_code)",
          "legendFormat": "{{endpoint}} {{status_code}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Prediction Latency p95 (seconds)",
      "datasource": {
        "type": "prometheus",
        "uid": "__PROMETHEUS__"
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "fieldConfig": {
        "defaults": {"unit": "s"},
        "overrides": []
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(prediction_latency_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Predictions by Class",
      "datasource": {
        "type": "prometheus",
        "uid": "__PROMETHEUS__"
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
      "targets": [
        {
          "expr": "sum(rate(predictions_total[1m])) by (predicted_class)",
          "legendFormat": "class {{predicted_class}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Prediction Errors by Type",
      "datasource": {
        "type": "prometheus",
        "uid": "__PROMETHEUS__"
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
      "targets": [
        {
          "expr": "sum(rate(prediction_errors_total[1m])) by (error_type)",
          "legendFormat": "{{error_type}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Active Requests",
      "datasource": {
        "type": "prometheus",
        "uid": "__PROMETHEUS__"
      },
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 16},
      "targets": [
        {
          "expr": "active_requests",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Average Model Confidence",
      "datasource": {
        "type": "prometheus",
        "uid": "__PROMETHEUS__"
      },
      "gridPos": {"h": 4, "w": 6, "x": 6, "y": 16},
      "targets": [
        {
          "expr": "avg(model_confidence)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {"unit": "percentunit"},
        "overrides": []
      }
    },
    {
      "type": "bargauge",
      "title": "API Requests (1m rate)",
      "datasource": {
        "type": "prometheus",
        "uid": "__PROMETHEUS__"
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
      "targets": [
        {
          "expr": "sum(rate(api_requests_total[1m])) by (endpoint)",
          "legendFormat": "{{endpoint}}",
          "refId": "A"
        }
      ]
    }
  ],
  "templating": {
    "list": [
      {
        "name": "datasource",
        "type": "datasource",
        "query": "prometheus",
        "refresh": 1,
        "hide": 0,
        "current": {
          "text": "Prometheus",
          "value": "Prometheus"
        },
        "options": [],
        "label": "Prometheus"
      }
    ]
  },
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": {
          "type": "grafana",
          "uid": "-- Grafana --"
        },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  }
}
